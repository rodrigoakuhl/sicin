{% extends 'RoyopaSicinBundle:Default:base.html.twig' %}

{% block body -%}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>
              Posição 
              {% if dataReferencia is defined %}
                {{ dataReferencia|date('d/m/Y') }}
              {% endif %}
            </h1>
            <p class="text-right">
                <a class="btn btn-default btn-success" href="{{ path('posicao_new') }}">Nova posição</a>
            </p>
        </div>

    <table class="datatable table table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data</th>
                <th>Ativo</th>
                <th>Vr Apl Tot</th>
                <th>Vr Liq Tot</th>
                <th>Vr Apl Mês</th>
                <th>Vr Rend Mês</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('posicao_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dataReferencia.format('d/m/Y') }}</td>
                <td title="{{ entity.instituicaoFinanceira.nome }} - {{ entity.ativo.nome }} - Quantidade: {{ entity.quantidade|number_format(2, ',', '.') }}">{{ entity.ativo.codigo }}</td>
                <td>{{ entity.valorBrutoTotal|number_format(2, ',', '.') }}</td>
                <td>{{ entity.valorLiquidoTotal|number_format(2, ',', '.') }}</td>
                <td>{{ entity.valorAplicadoMes|number_format(2, ',', '.') }}</td>
                <td>{{ entity.valorRendimentoMes|number_format(2, ',', '.') }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
          <tr>
              <th></th>
              <th></th>
              <th></th>
              <th>{{ valorBrutoTotal|number_format(2, ',', '.') }}</th>
              <th>{{ valorLiquidoTotal|number_format(2, ',', '.') }}</th>
              <th>{{ valorAplicadoMes|number_format(2, ',', '.') }}</th>
              <th>{{ valorRendimentoMes|number_format(2, ',', '.') }}</th>
          </tr>
        </tfoot>
      </table>
    </div>
</div>
{% endblock %}