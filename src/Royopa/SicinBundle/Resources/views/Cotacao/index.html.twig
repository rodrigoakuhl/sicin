{% extends 'RoyopaSicinBundle:Default:base.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-md-12">
      <div class="page-header">
        <h1>Selecione o ativo para ver a sua Cotação:</h1>
      </div>

    <table class="datatable">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Código</th>
          <th>Tipo</th>
        </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
        <tr>
          <td>{{ entity.nome }}</td>
          <td>
            <a href="{{ path('cotacao_show', { 'codigo': entity.codigo }) }}">{{ entity.codigo }}</a>
          </td>
          <td>{{ entity.tipo.nome }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
</div>
{% endblock %}
